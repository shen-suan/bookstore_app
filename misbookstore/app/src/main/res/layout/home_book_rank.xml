<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="1dp"
    android:layout_marginHorizontal="3dp"
    android:background="@drawable/bg_shadow_frame">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:background="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/hbr_medal"
            android:src="@drawable/medal"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/hbr_rank"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/colorGreyDark"
            android:textSize="25sp"
            android:paddingBottom="13dp"/>
        <ImageView
            android:id="@+id/hbr_img"
            android:src="@drawable/book_info"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hbr_medal"
            android:layout_marginHorizontal="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/hbr_title"
            android:layout_width="190dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:text="能多喜歡自己一點嗎？"
            android:layout_toRightOf="@+id/hbr_img"
            android:gravity="left|center_vertical"
            android:layout_marginVertical="10dp" />
        <TextView
            android:id="@+id/hbr_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorPrice"
            android:textSize="15sp"
            android:text="250元"
            android:layout_toRightOf="@+id/hbr_img"
            android:layout_below="@+id/hbr_title"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hbr_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/bg_checkbox_like"/>

        <Button
            android:id="@+id/hbr_btn"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="13dp"
            android:text="導航"
            android:textSize="13sp"
            android:background="@drawable/nav_btn"
            android:textColor="@color/colorB2"
            android:stateListAnimator="@null"/>


    </RelativeLayout>
</LinearLayout>