<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="30dp"
android:background="@color/colorGreyLight">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ps_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_shadow"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <com.example.bookstore.MemberInformation.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/cat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="黃郁馨"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="thisiscin" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ps_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ps_info"
        android:layout_margin="10dp"
        android:background="@drawable/bg_ps"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/ps_select"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_alignLeft="@+id/ps_select">

            <TextView
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawableLeft="@drawable/user"
                android:drawableRight="@drawable/rightarrow"
                android:drawablePadding="20dp"
                android:text="我的個人檔案"
                android:textSize="21sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawableLeft="@drawable/setting"
                android:drawableRight="@drawable/rightarrow"
                android:drawablePadding="20dp"
                android:text="帳號設定"
                android:textSize="21sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawableLeft="@drawable/cellphone"
                android:drawableRight="@drawable/rightarrow"
                android:drawablePadding="20dp"
                android:text="應用程式設定"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mi_btn_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_btn"
        android:text="登出"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />
</RelativeLayout>





</FrameLayout>