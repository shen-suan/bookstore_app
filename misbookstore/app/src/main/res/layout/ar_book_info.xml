    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/ar_author_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="-10dp"
            android:text="作者"
            android:textColor="@color/colorWhite"
            android:textSize="21sp"
            android:paddingHorizontal="25dp"/>
        <TextView
            android:id="@+id/ar_author_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="王兒十"
            android:layout_toRightOf="@+id/ar_author_title"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="23sp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/colorGrey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/ar_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="書名"
            android:gravity="center_vertical"
            android:textSize="21sp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="-10dp"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingHorizontal="25dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_above="@+id/ar_book_info"
            android:layout_height="0.5dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:id="@+id/ar_book_info"
            android:layout_below="@+id/ar_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="舉頭望明月"
            android:lines="3"
            android:gravity="center_vertical|left"
            android:textSize="23sp"
            android:paddingHorizontal="13dp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/colorGrey"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/ar_content_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:text="內容簡介"
                android:gravity="center_vertical"
                android:textSize="21sp"
                android:textColor="@color/colorWhite"
                android:clickable="true"
                android:paddingHorizontal="25dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrey"
        android:layout_marginHorizontal="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ar_content_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="@string/bi_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>