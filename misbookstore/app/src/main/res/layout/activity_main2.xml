<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">



        <ImageView
            android:id="@+id/imageView_Logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="150dip"
            android:layout_marginLeft="150dip"
            android:layout_marginTop="50dip"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView_Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_Logo"
            android:layout_centerHorizontal="true"
            android:text="Sign up"
            android:textSize="30dp"
            android:textColor="#FF1B06"
            />

        <!--有點不確定editText是否要另外設id-->
        <EditText
            android:id="@+id/editText_Signup"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/textView_Signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="15"
            android:hint="帳號"
            android:inputType="textPersonName"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editText2_Signup"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/editText_Signup"
            android:layout_alignStart="@+id/editText_Signup"
            android:layout_alignLeft="@+id/editText_Signup"
            android:layout_marginTop="10dp"
            android:ems="15"
            android:hint="密碼"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText3_Signup"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/editText2_Signup"
            android:layout_alignStart="@+id/editText2_Signup"
            android:layout_alignLeft="@+id/editText2_Signup"
            android:layout_marginTop="10dp"
            android:ems="15"
            android:hint="請再次輸入密碼"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText4_Signup"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/editText3_Signup"
            android:layout_alignStart="@+id/editText3_Signup"
            android:layout_alignLeft="@+id/editText3_Signup"
            android:layout_marginTop="10dp"
            android:ems="15"
            android:hint="Email"
            android:inputType="textAutoComplete" />


        <android.support.v7.widget.CardView
            android:id="@+id/CardView_Signup"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editText4_Signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="#FF0000"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2_SignupBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="7dp"
                    android:text="Sign up"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="25dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView2_Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardView_Signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="已經有帳號了?點我登入"
            android:textColor="#FF1B06"
            android:textSize="18sp" />

</RelativeLayout>

