<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_shadow">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:background="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/sli_img"
            android:src="@drawable/book_info"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/sli_title"
            android:layout_width="200dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/sli_img"
            android:gravity="left|center_vertical"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:id="@+id/sli_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorGreyDark"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/sli_img"
            android:layout_below="@+id/sli_title"/>
        <CheckBox
            android:id="@+id/sl_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sl_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/bg_checkbox_like_f"
            android:checked="true"/>

        <Button
            android:id="@+id/sl_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="20dp"
            android:text="導航"
            android:textSize="13sp"
            android:background="@drawable/nav_btn"
            android:textColor="@color/colorPrimaryDark"
            android:stateListAnimator="@null"/>


    </RelativeLayout>
</LinearLayout>